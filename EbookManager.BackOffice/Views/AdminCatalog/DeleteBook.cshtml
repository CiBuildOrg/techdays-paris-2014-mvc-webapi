@model EbookManager.CommonViewModels.EbookViewModel

@{
    ViewBag.Title = "Suppression d'un ebook";
}

<h2>@ViewBag.Title</h2>

<h3>Voulez-vous vraiment supprimer cet e-book ?</h3>
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Summary)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Summary)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PartsCount)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PartsCount)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Supprimer" class="btn btn-default" /> |
            @Html.ActionLink("Retour", "Index")
        </div>
    }
</div>
