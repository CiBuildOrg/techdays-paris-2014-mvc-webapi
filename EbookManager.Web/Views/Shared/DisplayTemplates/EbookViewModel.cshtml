@model EbookManager.CommonViewModels.EbookViewModel

<div class="col-md-4 col-sm-6 col-xs-12">
    <div class="row">
        <div class="col-md-12 text-center ebook-details">
            <a href="@Url.RouteUrl("ebookDetails", new{ebookId = Model.Id})" title="Voir le détail">
                <img src="data:image/png;base64,@Model.Thumbnail" alt="@Model.Title" class="img-thumbnail">
            </a>
        </div>
        <div class="col-md-12"><strong>@Model.Title</strong></div>
        <div class="col-md-12">@Model.Summary</div>
    </div>
</div>
